
DIALOG MAINDIALOG
{

	GROUP
	{
		BORDERSIZE 20,20,20,0; // left, top, right, bottom;
		SCALE_H;

		STATICTEXT INSTRUCTION { SCALE_H; ALIGN_LEFT; }
	}

	GROUP
	{
		BORDERSIZE 20,20,20,20;
		SCALE_H;
		COLUMNS 1;
		ROWS 1;
		SPACE 0, 10;

		GROUP
		{
			BORDERSTYLE BORDER_GROUP_IN;
			BORDERSIZE 20,20,20,20;
			SPACE 0, 10;
			SCALE_H;
			ROWS 2;
			COLUMNS 2;
			NAME EXPORT_STR;
			CHECKBOX DESTINATION { NAME DESTINATION_STR; SCALE_H; ALIGN_LEFT; }
			GROUP {
				SPACE 10, 10;
				STATICTEXT { NAME PRECISION_STR; ALIGN_LEFT; }
				EDITNUMBER PRECISION { SIZE 10,0; ALIGN_LEFT; }
			}
			CHECKBOX PRETTY { NAME PRETTY_STR; SCALE_H; ALIGN_LEFT; }
			GROUP {
				SPACE 10, 10;
				CHECKBOX FLIPX { NAME FLIPX_STR; ALIGN_LEFT; }
				CHECKBOX FLIPY { NAME FLIPY_STR; ALIGN_LEFT; }
				CHECKBOX FLIPZ { NAME FLIPZ_STR; ALIGN_LEFT; }
			}
		}
		GROUP {
			SPACE 50, 50;
			STATICTEXT { NAME BLANK_STR; }
		}
		GROUP
		{
			BORDERSTYLE BORDER_GROUP_IN;
			BORDERSIZE 20,20,20,20;
			SPACE 0, 10;
			ROWS 7;
			SCALE_H;
			NAME GEOMETRY_STR;

			GROUP {
				COLUMNS 2;
				SPACE 30, 0;
				ALIGN_BOTTOM;
				STATICTEXT { NAME REFERENCESELECT_STR; }
				COMBOBOX REFERENCESELECT {
					ALIGN_LEFT;
					ALIGN_BOTTOM;
					CHILDS {
						GLOBAL, GLOBAL_STR;
						LOCAL, LOCAL_STR;
					}
				}
			}
			CHECKBOX TRIANGULATE { NAME TRIANGULATE_STR; SCALE_H; ALIGN_LEFT; }
			CHECKBOX PHONG { NAME PHONG_STR; SCALE_H; ALIGN_LEFT; }
			CHECKBOX VERTICES { NAME VERTICES_STR; SCALE_H; ALIGN_LEFT; }
			GROUP {
				COLUMNS 2;
				ROWS 2;
				SPACE 20, 10;
				CHECKBOX NORMALS { NAME NORMALS_STR; ALIGN_LEFT; }
				RADIOGROUP NORMALSELECT
				{
					SPACE 10, 10;
					RADIOGADGET NORMALSFACE { NAME NORMALSFACE_STR; }
					RADIOGADGET NORMALSVERTEX { NAME NORMALSVERTEX_STR; }
				}				

				CHECKBOX UVS { NAME UVS_STR; ALIGN_LEFT; }
				GROUP {
					SPACE 10, 10;
					CHECKBOX FLIPU { NAME FLIPU_STR; ALIGN_LEFT; }
					CHECKBOX FLIPV { NAME FLIPV_STR; ALIGN_LEFT; }
				}
			}
			CHECKBOX FACES { NAME FACES_STR; SCALE_H; ALIGN_LEFT; }
		}
		GROUP {
			SPACE 50, 50;
			STATICTEXT { NAME BLANK_STR; }
		}
		GROUP
		{
			BORDERSTYLE BORDER_GROUP_IN;
			BORDERSIZE 20,20,20,20;
			SPACE 0, 10;
			ROWS 10;
			SCALE_H;
			NAME ANIMATIONS_STR;

			GROUP {
				COLUMNS 2;
				SPACE 30, 0;
				ALIGN_BOTTOM;
				CHECKBOX BONES { NAME BONES_STR; ALIGN_LEFT; ALIGN_BOTTOM; }
				COMBOBOX BONESELECT { ALIGN_LEFT; ALIGN_BOTTOM; }
			}
			GROUP {
				COLUMNS 1;
				ROWS 2;
				SPACE 10, 10;
				ALIGN_TOP;
				CHECKBOX WEIGHTS { NAME WEIGHTS_STR; SCALE_H; ALIGN_LEFT; }
				GROUP {
					COLUMNS 2;
					ROWS 1;
					CHECKBOX SKANIM { NAME SKANIM_STR; SCALE_H; ALIGN_LEFT; ALIGN_TOP; }
					SPACE 20, 10;
					GROUP {
						SPACE 10, 10;
						COLUMNS 3;
						ROWS 1;
						CHECKBOX POS { NAME POS_STR; ALIGN_LEFT; }
						CHECKBOX ROT { NAME ROT_STR; ALIGN_LEFT; }
						CHECKBOX SCL { NAME SCL_STR; ALIGN_LEFT; }
					}
				}
			}
			CHECKBOX MARKERS { NAME MARKERS_STR; ALIGN_LEFT; ALIGN_BOTTOM; }
			GROUP {
				COLUMNS 3;
				ROWS 1;
				SPACE 20, 10;
				ALIGN_TOP;
				GROUP {
					COLUMNS 2;
					ROWS 2;
					STATICTEXT INFLUENCESLABEL { NAME INFLUENCES_STR; ALIGN_LEFT; }
					EDITNUMBER INFLUENCES { SIZE 10,0; ALIGN_LEFT; }
					STATICTEXT FPSLABEL { NAME FPS_STR; ALIGN_LEFT; }
					EDITNUMBER FPS { SIZE 30,0; ALIGN_LEFT; }
				}
				SEPARATOR { SCALE_V; }
				GROUP {
					COLUMNS 2;
					ROWS 1;
					STATICTEXT MINFRAMELABEL { NAME MINFRAMELABEL_STR; }
					EDITNUMBER MINFRAME { SIZE 30,0; }
					STATICTEXT MAXFRAMELABEL { NAME MAXFRAMELABEL_STR; }
					EDITNUMBER MAXFRAME { SIZE 30,0; }
				}
			}
		}
	}

	GROUP
	{
		BORDERSIZE 20,0,20,20;
		CENTER_H;
		DLGGROUP { OK; CANCEL; }
	}

}